<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    android:orientation="vertical"
    tools:context="com.example.joasia.taniedranie.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/taniedranie"
        android:contentDescription="@string/tanie_dranie" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15sp"
        android:paddingRight="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My jesteśmy "
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanie Dranie"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:textSize="28sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dranie tanie niesłychanie!"
        android:textSize="28sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="#666666"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/center"/>

        <ImageView
            android:layout_width="75sp"
            android:layout_height="60sp"
            android:src="@drawable/pointer"
            android:id="@+id/pointer"
            android:layout_toLeftOf="@id/center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_toLeftOf="@id/pointer"
            android:layout_centerInParent="true"
            android:text="Więcej\n\tinfo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/youtube_link"
            android:autoLink="web"
            android:textColorLink="#0000ff"
            android:layout_toRightOf="@id/center"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="#666666"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginBottom="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stosujemy zniżek system\nZa abonamencik świństew."
        android:textSize="24sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingBottom="40sp"
        android:id="@+id/textView" />


</LinearLayout>
